<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_Height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/header"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="80dp"
        android:layout_marginTop="@dimen/margin"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:id="@+id/studentImage"
        android:src="@drawable/motallebi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/min_margin"
        android:layout_height="wrap_content"
        android:id="@+id/studentFullName"
        android:layout_below="@+id/studentImage"
        android:text="امیرحسین باقی نژاد"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentNumber"
        android:text="9421983"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/studentFullName"
        android:textSize="@dimen/padding_in_text_container"
        android:textColor="@color/white"
        />


</RelativeLayout>